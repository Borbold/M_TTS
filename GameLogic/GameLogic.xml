<Defaults>
    <Button class='changeStateButton' onClick='changePlayerState' />
    <Button class='hitButton' onClick='whatPartBodyHit' />
    <!---->
    <Dropdown class='colorPlayer' id='colorPlayer' onValueChanged='changeClass' />
    <Dropdown class='class' onValueChanged='changeClass' />
    <Dropdown class='race' onValueChanged='changeRace' />
    <!---->
    <ProgressBar percentageTextFormat='0' showPercentageText='false' />
    <Text resizeTextForBestFit='true' resizeTextMaxSize='80' color='#dfaf37' font='Font/Gothic' />
    <Button resizeTextForBestFit='true' resizeTextMaxSize='80' font='Font/Gothic' color='#332b00' textColor='#d4af37' />
    <InputField resizeTextForBestFit='true' resizeTextMaxSize='80' font='Font/Gothic' characterValidation='Integer' text='0' onEndEdit='fieldEdit' color='#1c1c1c' textColor='#d4af37' />
    <VerticalScrollView scrollbarColors='#d4af37|#d4af37|#d4af37|rgba(0.1,0.1,0.1,0)' scrollbarBackgroundColor='#fafafa4f'
        horizontalScrollbarVisibility='AutoHideAndExpandViewport' scrollSensitivity='15' />
    <Dropdown resizeTextForBestFit='true' resizeTextMaxSize='80' color='#dfaf37' itemBackgroundColors='#dfaf37' scrollSensitivity='15' />
</Defaults>

<Panel position='0 0 -70' scale='0.25'>
    <VerticalScrollView width='400' height='400'>
        <GridLayout startAxis='Vertical' spacing='3 3' cellSize='380 120' height='1480' color='Black'>
            <Dropdown class='colorPlayer'>
                <Option selected='true'>White</Option>
                <Option>Red</Option>
                <Option>Blue</Option>
            </Dropdown>
            <Dropdown class='race'>
                <Option selected='true'>Altmer</Option>
                <Option>Argonian</Option>
                <Option>Bosmer</Option>
                <Option>Breton</Option>
                <Option>Dunmer</Option>
                <Option>Imperial</Option>
                <Option>Khajiit</Option>
                <Option>Nord</Option>
                <Option>Orsimer</Option>
                <Option>Redguard</Option>
            </Dropdown>
            <Dropdown class='class'>
                <Option selected='true'>Acrobat</Option>
                <Option>Assassin</Option>
                <Option>Barbarian</Option>
                <Option>Battlemage</Option>
                <Option>Crusader</Option>
                <Option>Healer</Option>
                <Option>Knight</Option>
                <Option>Mage</Option>
                <Option>Monk</Option>
                <Option>Nightblade</Option>
                <Option>Pilgrim</Option>
                <Option>Rogue</Option>
                <Option>Scout</Option>
                <Option>Sorcerer</Option>
                <Option>SpellSword</Option>
                <Option>Warrior</Option>
                <Option>Witchhunter</Option>
            </Dropdown>
            <Button class='changeStateButton' id='but1' text='Health' />
            <InputField id='Health' />
            <Button class='changeStateButton' id='but2' text='Mana' />
            <InputField id='Mana' />
            <Button class='changeStateButton' id='but3' text='Stamina' />
            <InputField id='Stamina' />
            <Button class='changeStateButton' id='restoreAll' text='Restore All' />
            <Button class='changeStateButton' id='restoreStaminaPerTurn' text='Restore Stamina Per Turn' />
            <Button class='hitButton' text='What Part Of Body Hit' />
        </GridLayout>
    </VerticalScrollView>
</Panel>